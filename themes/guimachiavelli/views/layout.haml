!!!
%html(lang="en")
  %head
    %meta(charset="utf-8")
    - if @description
      %meta(name="description" content=@description)
    - if @keywords
      %meta(name="keywords" content=@keywords)
    %title= @title

    %link{ :href => url("http://fonts.googleapis.com/css?family=IM+Fell+Great+Primer&subset=latin,latin-ext"), :rel => "stylesheet"}

    <!--[if ! lte IE 6]><!-->
    %link{ :href => url("/#{Nesta::Config.theme}/css/layout.css"), :media => "all", :rel => "stylesheet"}
    <!--<![endif]-->
    /[if lte IE 6]
      %link(rel="stylesheet" href="http://universal-ie6-css.googlecode.com/files/ie6.1.1.css" media="screen, projection")
    /[if lt IE 9]
      %script(src="//html5shim.googlecode.com/svn/trunk/html5.js")
    = local_stylesheet_link_tag('local')
    %link(href="/articles.xml" rel="alternate" type="application/atom+xml")

  %body
    
    = haml :sidebar, :layout => false
    
    #wrap

      = haml :header, :layout => false

      = yield
     
